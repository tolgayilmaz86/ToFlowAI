{
    "version": "2.0.0",
    "options": {
        "env": {
            "JAVA_HOME": "C:\\Program Files\\Microsoft\\jdk-25.0.0.36-hotspot"
        }
    },
    "tasks": [
        {
            "label": "Build All",
            "type": "shell",
            "command": "./gradlew",
            "windows": {
                "command": ".\\gradlew.bat"
            },
            "args": [
                "build",
                "-x",
                "test",
                "--no-daemon"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gradle"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Build with Tests",
            "type": "shell",
            "command": "./gradlew",
            "windows": {
                "command": ".\\gradlew.bat"
            },
            "args": [
                "build"
            ],
            "group": "build",
            "problemMatcher": [
                "$gradle"
            ]
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "./gradlew",
            "windows": {
                "command": ".\\gradlew.bat"
            },
            "args": [
                "clean",
                "build",
                "-x",
                "test"
            ],
            "group": "build",
            "problemMatcher": [
                "$gradle"
            ]
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "./gradlew",
            "windows": {
                "command": ".\\gradlew.bat"
            },
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$gradle"
            ]
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "./gradlew",
            "windows": {
                "command": ".\\gradlew.bat"
            },
            "args": [
                "test",
                "jacocoTestReport"
            ],
            "group": "test",
            "problemMatcher": [
                "$gradle"
            ]
        },
        {
            "label": "Run Application (bootRun)",
            "type": "shell",
            "command": "./gradlew",
            "windows": {
                "command": ".\\gradlew.bat"
            },
            "args": [
                ":app:bootRun",
                "--no-daemon"
            ],
            "group": "none",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting ToFlowAIApplication.*$",
                    "endsPattern": "^.*Started ToFlowAIApplication.*$"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            }
        },
        {
            "label": "Debug Application (bootRun)",
            "type": "shell",
            "command": "./gradlew",
            "windows": {
                "command": ".\\gradlew.bat"
            },
            "args": [
                ":app:bootRun",
                "--no-daemon",
                "-Dagentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=*:5005"
            ],
            "group": "none",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Listening for transport.*$",
                    "endsPattern": "^.*Started ToFlowAIApplication.*$"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            }
        },
        {
            "label": "Flyway Migrate",
            "type": "shell",
            "command": "./gradlew",
            "windows": {
                "command": ".\\gradlew.bat"
            },
            "args": [
                ":app:flywayMigrate"
            ],
            "group": "none",
            "problemMatcher": [
                "$gradle"
            ]
        },
        {
            "label": "Flyway Info",
            "type": "shell",
            "command": "./gradlew",
            "windows": {
                "command": ".\\gradlew.bat"
            },
            "args": [
                ":app:flywayInfo"
            ],
            "group": "none",
            "problemMatcher": [
                "$gradle"
            ]
        },
        {
            "label": "Package (jpackage)",
            "type": "shell",
            "command": "./gradlew",
            "windows": {
                "command": ".\\gradlew.bat"
            },
            "args": [
                ":app:jpackage"
            ],
            "group": "build",
            "problemMatcher": [
                "$gradle"
            ]
        },
        {
            "label": "Refresh Gradle Dependencies",
            "type": "shell",
            "command": "./gradlew",
            "windows": {
                "command": ".\\gradlew.bat"
            },
            "args": [
                "--refresh-dependencies",
                "build",
                "-x",
                "test"
            ],
            "group": "none",
            "problemMatcher": [
                "$gradle"
            ]
        },
        {
            "label": "Generate Wrapper",
            "type": "shell",
            "command": "gradle",
            "args": [
                "wrapper",
                "--gradle-version=9.2"
            ],
            "group": "none",
            "problemMatcher": []
        }
    ]
}