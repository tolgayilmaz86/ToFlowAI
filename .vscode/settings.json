{
    // Java Settings
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.compile.nullAnalysis.mode": "automatic",
    "java.project.sourcePaths": [],
    "java.project.outputPath": "",
    "java.project.referencedLibraries": [],
    // Java 25 Configuration
    "java.jdt.ls.java.home": "C:\\Program Files\\Microsoft\\jdk-25.0.0.36-hotspot",
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-25",
            "path": "C:\\Program Files\\Microsoft\\jdk-25.0.0.36-hotspot",
            "default": true
        }
    ],
    // Gradle Integration
    "java.import.gradle.enabled": true,
    "java.import.gradle.wrapper.enabled": true,
    "java.import.gradle.offline.enabled": false,
    "java.import.gradle.arguments": "--enable-preview",
    "java.import.gradle.jvmArguments": "--enable-preview",
    "java.import.gradle.java.home": "C:\\Program Files\\Microsoft\\jdk-25.0.0.36-hotspot",
    // Compiler settings for Java 25 preview features
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx2G -Xms100m --enable-preview",
