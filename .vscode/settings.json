        "**/build": true,
        "**/.idea": true,
        "**/data": true
    },
    "search.exclude": {
        "**/.gradle": true,
        "**/build": true,
        "**/node_modules": true
    },
    // Terminal Settings
    "terminal.integrated.env.windows": {
        "JAVA_HOME": "C:\\Program Files\\Microsoft\\jdk-25.0.0.36-hotspot"
    },
    // Spring Boot
    "spring-boot.ls.java.vmargs": [
        "--enable-preview"
    ],
    // Test Runner
    "java.test.config": {
        "vmArgs": [
            "--enable-preview",
            "-Djava.net.preferIPv4Stack=true"
        ]
    }
